<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="İsim:"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/txt2"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@id/txt1"
            android:layout_marginTop="10dp"
            android:text="Soyisim:"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/txt3"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txt2"
            android:text="Yaş:"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/txt4"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@id/txt3"
            android:layout_marginTop="10dp"
            android:text="Okul:"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/txt5"
            android:layout_width="120dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            android:layout_below="@id/txt4"
            android:text="Memleket:"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/txt6"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="Baran"
            android:gravity="left"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:layout_marginLeft="180dp"/>

        <TextView
            android:id="@+id/txt7"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@id/txt6"
            android:text="Kemer"
            android:gravity="left"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/txt8"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@id/txt7"
            android:text="20"
            android:gravity="left"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/txt9"
            android:layout_width="240dp"
            android:layout_height="27dp"
            android:layout_below="@id/txt8"
            android:text="İSOV Dinçkök MTAL."
            android:gravity="left"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="12dp"/>
        <TextView
            android:id="@+id/txt10"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@id/txt9"
            android:text="Kars"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:gravity="left"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:id="@+id/txt11"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt10"
            android:layout_marginTop="40dp"
            android:text="Deneyimler"

            android:textSize="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txt12"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_below="@id/txt11"
            android:layout_centerHorizontal="true"
            android:text="2017-2018 KOÇ Holding IT Stajerlik\n2015-2019 Elektrik Elektronik Meslek Lisesi"
            android:textSize="25dp"
            android:layout_margin="10dp"
            android:paddingBottom="130dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            />

    </RelativeLayout>



</RelativeLayout>